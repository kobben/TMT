{
  
  "width": 700,
  "height": 580,
  "padding": 0,
  "config": {
    "view": {
      "stroke": "none"
    },
    "legend": {
      "orient": "right",
      "titlePadding": 15,
      "titleFontSize": 15,
      "titleFontWeight": "bold",
      "labelOffset": 10,
      "symbolSize": 400,
      "symbolStroke": "#888888",
      "symbolStrokeWidth": 0.3
    }
  },
  "data": {
    "url": "%DATA_URL%",
    "format": {
      "type": "json",
      "property": "%DATA_PROPERTY%"
    }
  },
  "projection": {
    "type": "stereographic"
  },
  "layer": [
    {
      "mark": "square",
      "encoding": {
        "longitude": {
          "field": "properties.centroid_lon",
          "type": "quantitative"
        },
        "latitude": {
          "field": "properties.centroid_lat",
          "type": "quantitative"
        },
        "stroke": {"value": "#888888"},
        "strokeWidth": {"value": 0.3},
        "size": {"value" : 400},
        "fill": {
          "field": "%DATA_ATTRIBUTE%",
          "type": "nominal",
          "scale": {
            "range": [
              "url(#orientation-fat-0)",
              "url(#orientation-fat-90)",
              "url(#orientation-fat-45)",
              "url(#orientation-fat-135)",
              "url(#orientation-fat-22.5)",
              "url(#orientation-fat-67.5)",
              "url(#orientation-fat-112.5)",
              "url(#orientation-fat-157.5)"
            ]
          },
          "legend": {
            "title": "%LEGEND_TITLE%"
          }
        }
      }
    }
  ]
}
