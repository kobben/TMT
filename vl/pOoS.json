{
  
  "width": 700,
  "height": 580,
  "padding": 0,
  "config": {
    "view": {
      "stroke": "none"
    },
    "legend": {
      "orient": "right",
      "titlePadding": 15,
      "titleFontSize": 15,
      "titleFontWeight": "bold",
      "labelOffset": 10,
      "symbolSize": 400
    }
  },
  "data": {
    "url": "%DATA_URL%",
    "format": {
      "type": "json",
      "property": "%DATA_PROPERTY%"
    }
  },
  "projection": {
    "type": "stereographic"
  },
  "layer": [
    {
      "mark": "point",
      "encoding": {
        "longitude": {
          "field": "properties.centroid_lon",
          "type": "quantitative"
        },
        "latitude": {
          "field": "properties.centroid_lat",
          "type": "quantitative"
        },
        "fill": {"value" : "red"},
        "stroke": {"value": "none"},
        "size": {
          "field": "%DATA_ATTRIBUTE%",
          "type": "ordinal",
          "scale": {
            "range" : [100,5000]
          },
         "legend": {
            "title": "%LEGEND_TITLE%"
          }
        }
      }
    }
  ]
}
